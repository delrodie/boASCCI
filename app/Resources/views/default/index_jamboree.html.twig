{% extends 'base.html.twig' %}

{% block body %}
    
				<div class="content_slider">
					<ul>
						{% for slider in sliders %}
<li>
							<a href="#"><img src="{{ asset('uploads/sliders/'~ slider.imageName) | imagine_filter('sliders') }}" alt="{{ slider.legende }}"></a>
							<div class="slider_caption">
								<div class="thumb_link">
									<h3><a href="#">{{ slider.legende }}</a></h3>
								</div>
							</div>
						</li>
						{% endfor %}
</ul>
				</div>

				<div class="panel_title">
