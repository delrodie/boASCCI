{% extends 'base.html.twig' %}

{% block title %}{{ regionale.titre }}{% endblock %}


{% block body %}
<article class="post">


						<div class="ariane_wrapper">

							<div class="ariane">
								<span><i class="fa fa-home"></i> <a href="{{ path('homepage')}}">Accueil</a></span>&nbsp; / 
								<a href="#">Actualités regionale</a> /
								<a href="#">{{ regionale.region.libelle }}</a>
							</div>
						</div>

						<div class="entry_media">
							<a href="{{ asset('uploads/regionales/'~ regionale.imageName) | imagine_filter('page') }}" class="popup_link">
                                <img src="{{ asset('uploads/regionales/'~ regionale.imageName) | imagine_filter('page') }}" alt="{{ regionale.titre }}" title="{{ regionale.titre }}">
                            </a>
						</div>

						<div class="full_meta clearfix">
							<span class="meta_format"><i class="fa fa-file-text"></i></span>
							<span class="meta_date">{{ regionale.region.libelle }}   </span>
							
						</div>

						<div class="entry_content">
							 <h1 class="entry_title">{{ regionale.titre }}</h1>
								<p class="dropcap alignJustify">{{ regionale.contenu|raw }}</p>
								
						</div>

						<div class="bottom_wrapper">

							<div class="entry_tags">
								<span><i class="fa fa-tags"></i> Mots clés</span>
                                {% for tag in regionale.tag|split(',') %}
                                <a href="#">{{ tag }}</a>
                                {% endfor %}
							</div>
						</div>

					</article>

					<div class="panel_title">
						<div>
						<h4><a href="#">Autres actualités regionales</a></h4>
						</div>
					</div>
					<div class="row">
						{% for similaire in similaires %}
                            <div class="col col_4_of_12">

							<div class="layout_post_1">
								<div class="item_thumb">
									<div class="thumb_icon">
										<a href="{{ path('fo_regionale', {'slug': similaire.slug})}}" style="background-color: #{{similaire.region.couleur}}"><i class="fa fa-copy"></i></a>
									</div>
									<div class="thumb_hover">
										<a href="{{ path('fo_regionale', {'slug': similaire.slug})}}"><img src="{{ asset('uploads/regionales/'~ similaire.imageName) | imagine_filter('similaire') }}" alt="{{ similaire.titre}}" class="visible animated"></a>
									</div>
									<div class="thumb_meta">
									<span class="category" style="background-color: #{{ similaire.region.couleur }}"><a href="#">{{ similaire.region.libelle }}</a></span>
									</div>
								</div>
								<div class="item_content">
									<h4><a href="{{ path('fo_regionale', {'slug': similaire.slug})}}">{{ similaire.titre }}</a></h4>
									<div class="item_meta clearfix">
										<span class="meta_date">{{ similaire.publieLe|date('d-m-Y') }}</span>
									</div>
									<p>{{ similaire.resume|raw }} [...]</p>
								</div>
							</div>
						</div>
                        {% endfor %}
					</div>

					<!--<div id="comments">
						<div class="panel_title">
							<div>
								<h4><a href="blog.html">Commentaires</a></h4>
							</div>
						</div>
					</div>-->
{% endblock %}

{% block accueil %}{% endblock %}

{% block meta %}
        <meta name="keywords" content="{{ regionale.tag|raw }}"  />
        <meta name="description" content="{{ regionale.resume|raw }}" />
  	    <meta name="revisit" content="7 days" />
  	    <meta name="revisit-after" content="7 days">
  	    <meta name="Author" content="ASCCI-CENACOM, {{ regionale.publiePar|title }}">
  	    <meta name="Copyright" content="www.scoutascci.org">
  	    <meta name="Content-Language" content="FR">
  	    <meta name="distribution" content="global" />
  	    <meta name="Audience" content="All" />
  	    <meta name="Robots" content="full">

        <link rel="canonical" href="{http://scoutascci.org{{ path('fo_regionale', {'slug': regionale.slug})}}" />
        <meta property="og:locale" content="fr_FR" />
        <meta property="og:type" content="Item" />
        <meta property="og:title" content="{{ regionale.titre }}" />
        <meta property="og:description" content="{{ regionale.resume|raw }} " />
        <meta property="og:url" content="http://scoutascci.org{{ path('fo_regionale', {'slug': regionale.slug})}}" />
        <meta property="og:site_name" content="ASCCI" />
        <meta property="article:section" content="Item" />
        <meta property="article:published_time" content="{{ regionale.publieLe|date('Y-m-d')}}T{{ regionale.publieLe|date('H:i:s')}}+00:00" />
        <meta property="article:modified_time" content="{{ regionale.modifieLe|date('Y-m-d')}}T{{ regionale.modifieLe|date('H:i:s')}}+00:00" />
        <meta property="og:updated_time" content="{{ regionale.modifieLe|date('Y-m-d')}}T{{ regionale.modifieLe|date('H:i:s')}}+00:00" />
        <meta property="og:image" content="http://scoutascci.org{{ vich_uploader_asset(regionale, 'imageFile') }}" />
        <meta name="twitter:card" content="summary"/>
        <meta name="twitter:description" content="{{ regionale.resume|raw }}"/>
        <meta name="twitter:title" content="{{ regionale.titre }}"/>
        <meta name="twitter:domain" content="ASCCI"/>
        <meta name="twitter:image:src" content="http://scoutascci.org{{ vich_uploader_asset(regionale, 'imageFile') }}"/>
        <script type="application/ld+json">
    		{
    		  "@context": "http://schema.org",
    		  "@type": "NewsArticle",
    		  "mainEntityOfPage": {
    		    "@type": "WebPage",
    		    "@id": "https://scoutascci.org"
    		  },
    		  "headline": "{{ regionale.titre }}",
    		  "image": [
    		    "http://scoutascci.org{{ vich_uploader_asset(regionale, 'imageFile') }}",
    		    "http://scoutascci.org/ressources/images/logo2.png"
    		   ],
    		  "datePublished": "{{ regionale.publieLe|date('Y-m-d')}}T{{ regionale.publieLe|date('H:i:s')}}+00:00",
    		  "dateModified": "{{ regionale.modifieLe|date('Y-m-d')}}T{{ regionale.modifieLe|date('H:i:s')}}+00:00",
    		  "author": {
    		    "@type": "Person",
    		    "name": "Delrodie AMOIKON"
    		  },
    		   "publisher": {
    		    "@type": "Organization",
    		    "name": "{{ regionale.titre }}",
    		    "logo": {
    		      "@type": "ImageObject",
    		      "url": "http://scoutascci.org{{ vich_uploader_asset(regionale, 'imageFile') }}"
    		    }
    		  },
    		  "description": "{{ regionale.resume|raw }}"
    		}
    		</script>
        {% endblock %}