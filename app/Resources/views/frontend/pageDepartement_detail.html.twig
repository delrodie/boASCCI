{% extends 'base.html.twig' %}

{% block title %}
    {{ departement.titre }}
{% endblock %}


{% block body %}
<article class="post">


						<div class="ariane_wrapper">

							<div class="ariane">
								<span><i class="fa fa-home"></i> <a href="{{ path('homepage')}}">Accueil</a></span>&nbsp; / 
								<a href="#">departements</a> /
								<a href="#">{{ departement.typedepartement.libelle }}</a>
							</div>
						</div>

						<div class="entry_media">
							<a href="{{ asset('uploads/departements/'~ departement.imageName) | imagine_filter('page') }}" class="popup_link">
                                <img src="{{ asset('uploads/departements/'~ departement.imageName) | imagine_filter('page') }}" alt="{{ departement.titre }}" title="{{ departement.typedepartement.libelle }}">
                            </a>
						</div>

						<div class="full_meta clearfix">
							<span class="meta_format"><i class="fa fa-file-text"></i></span>
							<span class="meta_date">{{ departement.typedepartement.libelle }} </span>
							
						</div>

						<div class="entry_content">
							 <h1 class="entry_title">{{ departement.typedepartement.libelle }}</h1>
								<p class="dropcap alignJustify">{{ departement.contenu|raw }}</p>
								
						</div>

						<div class="bottom_wrapper">

							<div class="entry_tags">
								<span><i class="fa fa-tags"></i> Mots cl√©s</span>
                                {% for tag in departement.tag|split(',') %}
                                <a href="#">{{ tag }}</a>
                                {% endfor %}
							</div>
						</div>	

					</article> <br> <br>

					

					<!--<div id="comments">
						<div class="panel_title">
							<div>
								<h4><a href="blog.html">Commentaires</a></h4>
							</div>
						</div>
					</div>-->
{% endblock %}

{% block accueil %}{% endblock %}

{% block meta %}
		<meta name="keywords" content="{{ departement.tag|raw }}"  />
        <meta name="description" content="{{ departement.resume|raw }}" />
  	    <meta name="revisit" content="7 days" />
  	    <meta name="revisit-after" content="7 days">
  	    <meta name="Author" content="ASCCI-CENACOM, {{ departement.publiePar|title }}">
  	    <meta name="Copyright" content="www.scoutascci.org">
  	    <meta name="Content-Language" content="FR">
  	    <meta name="distribution" content="global" />
  	    <meta name="Audience" content="All" />
  	    <meta name="Robots" content="full">

        <link rel="canonical" href="{http://scoutascci.org{{ path('fo_departement', {'slug': departement.slug})}}" />
        <meta property="og:locale" content="fr_FR" />
        <meta property="og:type" content="Item" />
        <meta property="og:title" content="{{ departement.titre }}" />
        <meta property="og:description" content="{{ departement.resume|raw }} " />
        <meta property="og:url" content="http://scoutascci.org{{ path('fo_departement', {'slug': departement.slug})}}" />
        <meta property="og:site_name" content="ASCCI" />
        <meta property="article:section" content="Item" />
        <meta property="article:published_time" content="{{ departement.publieLe|date('Y-m-d')}}T{{ departement.publieLe|date('H:i:s')}}+00:00" />
        <meta property="article:modified_time" content="{{ departement.modifieLe|date('Y-m-d')}}T{{ departement.modifieLe|date('H:i:s')}}+00:00" />
        <meta property="og:updated_time" content="{{ departement.modifieLe|date('Y-m-d')}}T{{ departement.modifieLe|date('H:i:s')}}+00:00" />
        <meta property="og:image" content="http://scoutascci.org{{ vich_uploader_asset(departement, 'imageFile') }}" />
        <meta name="twitter:card" content="summary"/>
        <meta name="twitter:description" content="{{ departement.resume|raw }}"/>
        <meta name="twitter:title" content="{{ departement.titre }}"/>
        <meta name="twitter:domain" content="ASCCI"/>
        <meta name="twitter:image:src" content="http://scoutascci.org{{ vich_uploader_asset(departement, 'imageFile') }}"/>
        <script type="application/ld+json">
    		{
    		  "@context": "http://schema.org",
    		  "@type": "NewsArticle",
    		  "mainEntityOfPage": {
    		    "@type": "WebPage",
    		    "@id": "https://scoutascci.org"
    		  },
    		  "headline": "{{ departement.titre }}",
    		  "image": [
    		    "http://scoutascci.org{{ vich_uploader_asset(departement, 'imageFile') }}",
    		    "http://scoutascci.org/ressources/images/logo2.png"
    		   ],
    		  "datePublished": "{{ departement.publieLe|date('Y-m-d')}}T{{ departement.publieLe|date('H:i:s')}}+00:00",
    		  "dateModified": "{{ departement.modifieLe|date('Y-m-d')}}T{{ departement.modifieLe|date('H:i:s')}}+00:00",
    		  "author": {
    		    "@type": "Person",
    		    "name": "Delrodie AMOIKON"
    		  },
    		   "publisher": {
    		    "@type": "Organization",
    		    "name": "{{ departement.titre }}",
    		    "logo": {
    		      "@type": "ImageObject",
    		      "url": "http://scoutascci.org{{ vich_uploader_asset(departement, 'imageFile') }}"
    		    }
    		  },
    		  "description": "{{ departement.resume|raw }}"
    		}
    		</script>	
{% endblock %}