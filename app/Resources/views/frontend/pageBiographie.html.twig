{% extends 'base.html.twig' %}

{% block title %}
    {{ biographie.nomcomplet }}
{% endblock %}


{% block body %}
<article class="post">


						
						<div class="ariane_wrapper">

							<div class="ariane">
								<span><i class="fa fa-home"></i> <a href="{{ path('homepage')}}">Accueil</a></span>&nbsp; / 
								<a href="#">biographies</a> /
								<a href="#">{{ biographie.nomcomplet }}</a>
							</div>
						</div>

						<div class="entry_media">
							<a href="{{ asset('uploads/equipes/'~ biographie.imageName) | imagine_filter('page') }}" class="popup_link">
                                <img src="{{ asset('uploads/equipes/'~ biographie.imageName) | imagine_filter('page') }}" alt="{{ biographie.nomcomplet }}" title="{{ biographie.nom }} - {{ biographie.typefonction }}">
                            </a>
						</div>

						<div class="full_meta clearfix">
							<span class="meta_format"><i class="fa fa-file-text"></i></span>
							<span c style="font-size: 20px">{{ biographie.nomcomplet }} </span>
							
						</div>

						<div class="entry_content">
							 <h1 class="entry_title">{{ biographie.nom }} - {{ biographie.fonction }}</h1>
								<p class="dropcap alignJustify">{{ biographie.biographie|raw }}</p>
								
						</div>

						<div class="bottom_wrapper">

							<div class="entry_tags">
								<span><i class="fa fa-tags"></i> Mots cl√©s</span>
                                {% for tag in biographie.tag|split(',') %}
                                <a href="#">{{ tag }}</a>
                                {% endfor %}
							</div>
						</div>	
						

					</article> <br> <br>

{% endblock %}

{% block accueil %}{% endblock %}

{% block meta %}
		<meta name="keywords" content="{% for tag in biographie.tag|split(',') %}{{ tag }}, {% endfor %}"  />
        <meta name="description" content="{{ biographie.biographie|raw }}" />
  	    <meta name="revisit" content="7 days" />
  	    <meta name="revisit-after" content="7 days">
  	    <meta name="Author" content="ASCCI-CENACOM, {{ biographie.publiePar|title }}">
  	    <meta name="Copyright" content="www.scoutascci.org">
  	    <meta name="Content-Language" content="FR">
  	    <meta name="distribution" content="global" />
  	    <meta name="Audience" content="All" />
  	    <meta name="Robots" content="full">

        <link rel="canonical" href="http://scoutascci.org{{ path('fo_biographie', {'slug': biographie.slug})}}" />
        <meta property="og:locale" content="fr_FR" />
        <meta property="og:type" content="Item" />
        <meta property="og:title" content="{{ biographie.nomcomplet }}" />
        <meta property="og:description" content="{{ biographie.biographie|raw }} " />
        <meta property="og:url" content="http://scoutascci.org{{ path('fo_biographie', {'slug': biographie.slug})}}" />
        <meta property="og:site_name" content="ASCCI" />
        <meta property="article:section" content="Item" />
        <meta property="article:published_time" content="{{ biographie.publieLe|date('Y-m-d')}}T{{ biographie.publieLe|date('H:i:s')}}+00:00" />
        <meta property="article:modified_time" content="{{ biographie.modifieLe|date('Y-m-d')}}T{{ biographie.modifieLe|date('H:i:s')}}+00:00" />
        <meta property="og:updated_time" content="{{ biographie.modifieLe|date('Y-m-d')}}T{{ biographie.modifieLe|date('H:i:s')}}+00:00" />
        <meta property="og:image" content="http://scoutascci.org{{ vich_uploader_asset(biographie, 'imageFile') }}" />
        <meta name="twitter:card" content="summary"/>
        <meta name="twitter:description" content="{{ biographie.biographie|raw }}"/>
        <meta name="twitter:title" content="{{ biographie.nomcomplet }}"/>
        <meta name="twitter:domain" content="ASCCI"/>
        <meta name="twitter:image:src" content="http://scoutascci.org{{ vich_uploader_asset(biographie, 'imageFile') }}"/>
        <script type="application/ld+json">
    		{
    		  "@context": "http://schema.org",
    		  "@type": "NewsArticle",
    		  "mainEntityOfPage": {
    		    "@type": "WebPage",
    		    "@id": "https://scoutascci.org"
    		  },
    		  "headline": "{{ biographie.nomcomplet }}",
    		  "image": [
    		    "http://scoutascci.org{{ vich_uploader_asset(biographie, 'imageFile') }}",
    		    "http://scoutascci.org/ressources/images/logo2.png"
    		   ],
    		  "datePublished": "{{ biographie.publieLe|date('Y-m-d')}}T{{ biographie.publieLe|date('H:i:s')}}+00:00",
    		  "dateModified": "{{ biographie.modifieLe|date('Y-m-d')}}T{{ biographie.modifieLe|date('H:i:s')}}+00:00",
    		  "author": {
    		    "@type": "Person",
    		    "name": "Delrodie AMOIKON"
    		  },
    		   "publisher": {
    		    "@type": "Organization",
    		    "name": "{{ biographie.nomcomplet }}",
    		    "logo": {
    		      "@type": "ImageObject",
    		      "url": "http://scoutascci.org{{ vich_uploader_asset(biographie, 'imageFile') }}"
    		    }
    		  },
    		  "description": "{{ biographie.biographie|raw }}"
    		}
    		</script>	
{% endblock %}