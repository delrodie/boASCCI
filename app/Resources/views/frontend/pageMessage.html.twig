{% extends 'base.html.twig' %}

{% block title %}{{ message.titre }}{% endblock %}


{% block body %}
<article class="post">


						<div class="ariane_wrapper">

							<div class="ariane">
								<span><i class="fa fa-home"></i> <a href="{{ path('homepage')}}">Accueil</a></span>&nbsp; / 
								<a href="#">message</a> /
								<a href="#">{{ message.titre}}</a>
							</div>
						</div>

						<div class="entry_media">
							<a href="{{ asset('uploads/messages/'~ message.imageName) | imagine_filter('page') }}" class="popup_link">
                                <img src="{{ asset('uploads/messages/'~ message.imageName) | imagine_filter('page') }}" alt="{{ message.titre }}" title="{{ message.titre }}">
                            </a>
						</div>

						<div class="full_meta clearfix">
							<span class="meta_format"><i class="fa fa-file-text"></i></span>
							<span class="meta_date">{{ message.titre}} </span>
							
						</div>

						<div class="entry_content">
							 <h1 class="entry_title">{{ message.titre }}</h1>
								<p class="dropcap alignJustify">{{ message.contenu|raw }}</p>
								
						</div>

						<div class="bottom_wrapper">

							<div class="entry_tags">
								<span><i class="fa fa-tags"></i> Mots cl√©s</span>
                                {% for tag in message.tag|split(',') %}
                                <a href="#">{{ tag }}</a>
                                {% endfor %}
							</div>
						</div>

					</article>

{% endblock %}

{% block accueil %}{% endblock %}

{% block meta %}
        <meta name="keywords" content="{% for tag in message.tag|split(',') %}{{ tag }}, {% endfor %}"  />
        <meta name="description" content="{{ message.resume|raw }}" />
  	    <meta name="revisit" content="7 days" />
  	    <meta name="revisit-after" content="7 days">
  	    <meta name="Author" content="ASCCI-CENACOM, {{ message.publiePar|title }}">
  	    <meta name="Copyright" content="www.scoutascci.org">
  	    <meta name="Content-Language" content="FR">
  	    <meta name="distribution" content="global" />
  	    <meta name="Audience" content="All" />
  	    <meta name="Robots" content="full">

        <link rel="canonical" href="http://scoutascci.org{{ path('fo_messageNational', {'slug': message.slug})}}" />
        <meta property="og:locale" content="fr_FR" />
        <meta property="og:type" content="Item" />
        <meta property="og:title" content="{{ message.titre }}" />
        <meta property="og:description" content="{{ message.resume|raw }} " />
        <meta property="og:url" content="http://scoutascci.org{{ path('fo_messageNational', {'slug': message.slug})}}" />
        <meta property="og:site_name" content="ASCCI" />
        <meta property="article:section" content="Item" />
        <meta property="article:published_time" content="{{ message.publieLe|date('Y-m-d')}}T{{ message.publieLe|date('H:i:s')}}+00:00" />
        <meta property="article:modified_time" content="{{ message.modifieLe|date('Y-m-d')}}T{{ message.modifieLe|date('H:i:s')}}+00:00" />
        <meta property="og:updated_time" content="{{ message.modifieLe|date('Y-m-d')}}T{{ message.modifieLe|date('H:i:s')}}+00:00" />
        <meta property="og:image" content="http://scoutascci.org{{ vich_uploader_asset(message, 'imageFile') }}" />
        <meta name="twitter:card" content="summary"/>
        <meta name="twitter:description" content="{{ message.resume|raw }}"/>
        <meta name="twitter:title" content="{{ message.titre }}"/>
        <meta name="twitter:domain" content="ASCCI"/>
        <meta name="twitter:image:src" content="http://scoutascci.org{{ vich_uploader_asset(message, 'imageFile') }}"/>
        <script type="application/ld+json">
    		{
    		  "@context": "http://schema.org",
    		  "@type": "NewsArticle",
    		  "mainEntityOfPage": {
    		    "@type": "WebPage",
    		    "@id": "https://scoutascci.org"
    		  },
    		  "headline": "{{ message.titre }}",
    		  "image": [
    		    "http://scoutascci.org{{ vich_uploader_asset(message, 'imageFile') }}",
    		    "http://scoutascci.org/ressources/images/logo2.png"
    		   ],
    		  "datePublished": "{{ message.publieLe|date('Y-m-d')}}T{{ message.publieLe|date('H:i:s')}}+00:00",
    		  "dateModified": "{{ message.modifieLe|date('Y-m-d')}}T{{ message.modifieLe|date('H:i:s')}}+00:00",
    		  "author": {
    		    "@type": "Person",
    		    "name": "Delrodie AMOIKON"
    		  },
    		   "publisher": {
    		    "@type": "Organization",
    		    "name": "{{ message.titre }}",
    		    "logo": {
    		      "@type": "ImageObject",
    		      "url": "http://scoutascci.org{{ vich_uploader_asset(message, 'imageFile') }}"
    		    }
    		  },
    		  "description": "{{ message.resume|raw }}"
    		}
    		</script>
{% endblock %}



