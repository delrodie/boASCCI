{% extends 'backoffice.html.twig' %}

{% block title %}Modification des Membres de l'equipe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('backoffice/plugins/bootstrap-validator/bootstrapValidator.min.css')}}" rel="stylesheet">
    <link href="{{ asset('backoffice/plugins/dropzone/dropzone.css')}}" rel="stylesheet">
    <link href="{{ asset('backoffice/vendor/tagsinput/js/bootstrap-tagsinput.css')}}" rel="stylesheet">
{% endblock %}


{% block body %}
    <div class="pageheader">
        <h3><i class="fa fa-home"></i>  Gestion des Membres de l'equipe</h3>
        <div class="breadcrumb-wrapper">
            <span class="label"></span>
            <ol class="breadcrumb">
                <li><a href="#">Accueil</a></li>
                <li class="active">Membres de l'equipe</li>
            </ol>
        </div>
    </div>

    <div id="page-content">


        <br>
        <!-- Message -->
        {% for flash_message in app.session.flashBag.get('notice') %}
            {% if flash_message %}
                <div class="row">
                    <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
                        <div class="alert alert-info media fade in">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            <div class="media-left">
                    <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                      <i class="fa fa-check fa-lg"></i>
                    </span>
                            </div>
                            <div class="media-body">
                                <p></p>
                                <h4 class="alert-title" style="color: green">
                                    {{ flash_message }}
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        <!-- \Message -->
        <br>

        <div class="row">
            <div class="col-sm-12 col-sm-offset-0">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Modification</h3>
                    </div>
                    {{ form_start(edit_form, { 'attr': {'class': 'form-vertical', 'id': 'regionForm' }}) }}
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-5 col-xs-offset-1">
                                <div class="form-group">
                                    <label class="control-label">Identité civile </label>
                                    {{ form_widget(edit_form.nomcomplet) }}
                                    {{ form_errors(edit_form.nomcomplet) }}
                                </div>
                            </div>
                            <div class="col-xs-5 col-xs-offset-0">
                                <div class="form-group">
                                    <label class="control-label">Nom réduit </label>
                                    {{ form_widget(edit_form.nom) }}
                                    {{ form_errors(edit_form.nom) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5 col-xs-offset-1">
                                <div class="form-group">
                                    <label class="control-label">Departement </label>
                                    {{ form_widget(edit_form.departement) }}
                                    {{ form_errors(edit_form.departement) }}
                                </div>
                            </div>
                            <div class="col-xs-5 col-xs-offset-0">
                                <div class="form-group">
                                    <label class="control-label">Type fonction </label>
                                    {{ form_widget(edit_form.typefonction) }}
                                    {{ form_errors(edit_form.typefonction) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5 col-xs-offset-1">
                                <div class="form-group">
                                    <label class="control-label">Fonction </label>
                                    {{ form_widget(edit_form.fonction) }}
                                    {{ form_errors(edit_form.fonction) }}
                                </div>
                            </div>
                            <div class="col-xs-5 col-xs-offset-0">
                                <div class="row"><br>
                                    <div class="form-group">
                                        <label class="control-label">Tag </label>
                                        {{ form_widget(edit_form.tag) }}
                                        {{ form_errors(edit_form.tag) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5 col-xs-offset-1">
                                <div class="checkbox">
                                    <label class="control-label">
                                        {{ form_widget(edit_form.cc) }}
                                        {{ form_errors(edit_form.cc) }}
                                        Membre du Cabinet du CN  </label>
                                </div>
                                <div class="checkbox">
                                    <label class="control-label">
                                        {{ form_widget(edit_form.bn) }}
                                        {{ form_errors(edit_form.bn) }}
                                        Membre du Bureau national  </label>
                                </div>
                                <div class="checkbox">
                                    <label class="control-label">
                                        {{ form_widget(edit_form.cna) }}
                                        {{ form_errors(edit_form.cna) }}
                                        Commissaire National Adjoint  </label>
                                </div>
                                <div class="checkbox">
                                    <label class="control-label">
                                        {{ form_widget(edit_form.acn) }}
                                        {{ form_errors(edit_form.acn) }}
                                        Assistant au Commissaire national  </label>
                                </div>
                                <div class="checkbox">
                                    <label class="control-label">
                                        {{ form_widget(edit_form.si) }}
                                        {{ form_errors(edit_form.si) }}
                                        Membre du Service International  </label>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="form-group">
                                    <label class="control-label">Biographie</label>
                                    {{ form_widget(edit_form.biographie) }}
                                    {{ form_errors(edit_form.biographie) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="form-group">
                                    <label class="control-label"></label>
                                    {{ form_widget(edit_form.imageFile) }}
                                    {{ form_errors(edit_form.imageFile) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5 col-xs-offset-1">
                                <div class="form-group">
                                    {% if (equipe.statut) %}
                                        <label class="control-label">Désactivez l'affichage  </label>
                                    {% else %}
                                        <label class="control-label">Activez l'affichage </label>
                                    {% endif %}
                                    {{ form_widget(edit_form.statut) }}
                                    {{ form_errors(edit_form.statut) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5 col-xs-offset-1">
                                <div class="form-group">
                                    {% if (equipe.lien) %}
                                        <label class="control-label">Désactivez le lien de la biographie  </label>
                                    {% else %}
                                        <label class="control-label">Activez le lien de la biographie  </label>
                                    {% endif %}
                                    {{ form_widget(edit_form.lien) }}
                                    {{ form_errors(edit_form.lien) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-sm-7 col-sm-offset-3 text-right">
                                <a href="{{ path('admin_equipe_index')}}" class="btn btn-default" type="reset">Annuler</a>
                                <button class="btn btn-primary" type="submit">Modifier</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(edit_form)}}
                </div>
            </div>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('backoffice/plugins/bootstrap-validator/bootstrapValidator.min.js')}}"></script>
    <script src="{{ asset('backoffice/js/sygesca-form-validation.js')}}"></script>
    <script src="{{ asset('backoffice/vendor/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('backoffice/vendor/tagsinput/js/bootstrap-tagsinput.js') }}" type="text/javascript">
    </script>
    <script>
        $("tag-input").tagsinput();
    </script>
{% endblock %}
