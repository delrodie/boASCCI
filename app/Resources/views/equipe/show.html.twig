{% extends 'backoffice.html.twig' %}

{% block title %}{{ equipe.nomcomplet }} : {{ equipe.typefonction }} {{ equipe.fonction }}{% endblock %}

{% block body %}
    <div class="pageheader">
        <h3><i class="fa fa-home"></i> equipes </h3>
        <div class="breadcrumb-wrapper">
            <span class="label"></span>
            <ol class="breadcrumb">
                <li><a href="#">Accueil</a></li>
                <li class="active">{{ equipe.nomcomplet|upper }}</li>
            </ol>
        </div>
    </div>

    <div id="page-content">

        <br>
        <!-- Message -->
        {% for flash_message in app.session.flashBag.get('notice') %}
            {% if flash_message %}
                <div class="row">
                    <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
                        <div class="alert alert-info media fade in">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            <div class="media-left">
                <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                  <i class="fa fa-check fa-lg"></i>
                </span>
                            </div>
                            <div class="media-body">
                                <p></p>
                                <h4 class="alert-title" style="color: green">
                                    {{ flash_message }}
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        <!-- \Message -->
        <br>

        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="panel">
                    <div class="btn-toolbar pad-all">
                        <div class="btn-group">
                            <a href="{{ path('admin_equipe_index') }}">
                                <button class="btn btn-sm btn-default" type="button">
                                    <i class="fa fa-mail-reply"></i>
                                </button>
                            </a>
                        </div>
                        <div class="btn-group">
                            <a href="{{ path('admin_equipe_edit', { 'slug': equipe.slug }) }}">
                                <button class="btn btn-sm btn-default" type="button">
                                    <i class="fa fa-edit"></i>
                                </button>
                            </a>
                        </div>
                        <div class="btn-group">
                            {{ form_start(delete_form) }}
                            <button class="btn btn-sm btn-default" type="submit" onclick="return(confirm('Etes-vous sûr de vouloir supprimer {{ equipe.nomcomplet }}?'));">
                                <i class="fa fa-trash"></i>
                            </button>
                            {{ form_end(delete_form) }}

                        </div>
                    </div>
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ equipe.nomcomplet }}</h3>
                    </div>
                    <div class="panel-body">
                        <div class="view-mail text-justify">
                            <img src="{{ vich_uploader_asset(equipe, 'imageFile') }}" alt="{{ equipe.nomcomplet }}" width="400" class="img-thumbnail img-page" />
                            <p>
                                <em><strong>{{ equipe.typefonction }} - {{ equipe.fonction }}</strong></em>
                            </p> <br><br>
                            {{ equipe.biographie|raw }}
                            <p>
                                <u>MOTS CLES</u>:<br>
                                {% for tag in equipe.tag|split(',') %}
                                    #<strong><em>{{ tag }}</em></strong>
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
{% endblock %}
