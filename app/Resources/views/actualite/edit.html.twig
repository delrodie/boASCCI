{% extends 'backoffice.html.twig' %}

{% block title %}Modification de l'article {{ actualite.titre }} {% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('backoffice/plugins/bootstrap-validator/bootstrapValidator.min.css')}}" rel="stylesheet">
<link href="{{ asset('backoffice/plugins/dropzone/dropzone.css')}}" rel="stylesheet">
<link href="{{ asset('backoffice/vendor/tagsinput/js/bootstrap-tagsinput.css')}}" rel="stylesheet">
{% endblock %}


{% block body %}
<div class="pageheader">
  <h3><i class="fa fa-home"></i>  Gestion des actualites</h3>
  <div class="breadcrumb-wrapper">
    <span class="label"></span>
    <ol class="breadcrumb">
      <li><a href="#">Accueil</a></li>
      <li class="active">actualites</li>
    </ol>
  </div>
</div>

<div id="page-content">


      <br>
        <!-- Message -->
          {% for flash_message in app.session.flashBag.get('notice') %}
            {% if flash_message %}
            <div class="row">
              <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
                <div class="alert alert-info media fade in">
                  <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                  <div class="media-left">
                    <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                      <i class="fa fa-check fa-lg"></i>
                    </span>
                  </div>
                  <div class="media-body">
                    <p></p>
                      <h4 class="alert-title" style="color: green">
                        {{ flash_message }}
                      </h4>
                  </div>
                </div>
              </div>
            </div>
            {% endif %}
          {% endfor %}
          <!-- \Message -->
          <br>

          <div class="row">
            <div class="col-sm-12 col-sm-offset-0">
              <div class="panel">
                <div class="panel-heading">
                  <h3 class="panel-title">Modification</h3>
                </div>
                {{ form_start(edit_form, { 'attr': {'class': 'form-vertical', 'id': 'regionForm' }}) }}
                  <div class="panel-body">
                    <div class="row">
                      <div class="col-xs-10 col-xs-offset-1">
                        <div class="form-group">
                          <label class="control-label">Titre</label>
                          {{ form_widget(edit_form.titre) }}
                          {{ form_errors(edit_form.titre) }}
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-5 col-xs-offset-1">
                        <div class="row">
                          <div class="form-group">
                            <label class="control-label">Type de rubrique</label>
                            {{ form_widget(edit_form.tyactualite) }}
                            {{ form_errors(edit_form.tyactualite) }}
                          </div>
                        </div>
                        <div class="row">
                          <div class="form-group">
                            <label class="control-label">Mots clés</label>
                            {{ form_widget(edit_form.tag) }}
                            {{ form_errors(edit_form.tag) }}
                          </div>
                        </div>
                      </div>
                      <div class="col-xs-5 col-xs-offset-0">
                        <div class="form-group">
                          <label class="control-label">Resumé</label>
                          {{ form_widget(edit_form.resume) }}
                          {{ form_errors(edit_form.resume) }}
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-10 col-xs-offset-1">
                        <div class="form-group">
                          <label class="control-label">Contenu</label>
                          {{ form_widget(edit_form.contenu) }}
                          {{ form_errors(edit_form.contenu) }}
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-10 col-xs-offset-1">
                        <div class="form-group">
                          <label class="control-label">Image</label>
                          {{ form_widget(edit_form.imageFile) }}
                          {{ form_errors(edit_form.imageFile) }}
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-10 col-xs-offset-1">
                        <div class="form-group">
                          <label class="control-label">Activez  </label>
                          {{ form_widget(edit_form.statut) }}
                          {{ form_errors(edit_form.statut) }}
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="panel-footer">
                    <div class="row">
                      <div class="col-sm-7 col-sm-offset-3 text-right">
                        <a href="{{ path('admin_actualite_index')}}" class="btn btn-default" type="reset">Annuler</a>
                        <button class="btn btn-primary" type="submit">Modification</button>
                      </div>
                    </div>
                  </div>
                {{ form_end(edit_form)}}
              </div>
            </div>
          </div>

</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('backoffice/plugins/bootstrap-validator/bootstrapValidator.min.js')}}"></script>
<script src="{{ asset('backoffice/js/sygesca-form-validation.js')}}"></script>
<script src="{{ asset('backoffice/vendor/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
<script src="{{ asset('backoffice/vendor/tagsinput/js/bootstrap-tagsinput.js') }}" type="text/javascript">
</script>
<script>
  $("tag-input").tagsinput();
</script>
{% endblock %}
