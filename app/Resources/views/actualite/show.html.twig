{% extends 'backoffice.html.twig' %}

{% block title %}{{ actualite.titre }}{% endblock %}

{% block body %}
<div class="pageheader">
  <h3><i class="fa fa-home"></i> actualites </h3>
  <div class="breadcrumb-wrapper">
    <span class="label"></span>
    <ol class="breadcrumb">
      <li><a href="#">Accueil</a></li>
      <li class="active">{{ actualite.titre|upper }}</li>
    </ol>
  </div>
</div>

<div id="page-content">

  <br>
    <!-- Message -->
      {% for flash_message in app.session.flashBag.get('notice') %}
        {% if flash_message %}
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
            <div class="alert alert-info media fade in">
              <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
              <div class="media-left">
                <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                  <i class="fa fa-check fa-lg"></i>
                </span>
              </div>
              <div class="media-body">
                <p></p>
                  <h4 class="alert-title" style="color: green">
                    {{ flash_message }}
                  </h4>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
      {% endfor %}
      <!-- \Message -->
      <br>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="panel">
        <div class="btn-toolbar pad-all">
          <div class="btn-group">
            <a href="{{ path('admin_actualite_index') }}">
            <button class="btn btn-sm btn-default" type="button">
              <i class="fa fa-mail-reply"></i>
            </button>
            </a>
          </div>
          <div class="btn-group">
            <a href="{{ path('admin_actualite_edit', { 'slug': actualite.slug }) }}">
            <button class="btn btn-sm btn-default" type="button">
              <i class="fa fa-edit"></i>
            </button>
            </a>
          </div>
          <div class="btn-group">
            {{ form_start(delete_form) }}
            <button class="btn btn-sm btn-default" type="submit">
              <i class="fa fa-trash"></i>
            </button>
            {{ form_end(delete_form) }}

          </div>
        </div>
        <div class="panel-heading">
          <h3 class="panel-title">{{ actualite.titre }}</h3>
        </div>
        <div class="panel-body">
          <div class="view-mail text-justify">
            <img src="{{ vich_uploader_asset(actualite, 'imageFile') }}" alt="{{ actualite.titre }}" width="400" class="img-thumbnail img-page" />
            <p>
              <em><strong>{{ actualite.resume|raw }}</strong></em>
            </p> <br><br>
            {{ actualite.contenu|raw }}
            <p>
              <u>MOTS CLES</u>:<br>
              {% for tag in actualite.tag|split(',') %}
                  #<strong><em>{{ tag }}</em></strong>
              {% endfor %}
            </p>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
{% endblock %}
