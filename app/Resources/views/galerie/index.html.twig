{% extends 'backoffice.html.twig' %}

{% block title %}Liste des galeries{% endblock %}

{% block body %}
<div class="pageheader">
  <h3><i class="fa fa-home"></i>  Gestion des galeries</h3>
  <div class="breadcrumb-wrapper">
    <span class="label"></span>
    <ol class="breadcrumb">
      <li><a href="#">Accueil</a></li>
      <li class="active">galerie</li>
    </ol>
  </div>
</div>

<div id="page-content">

  <br>
    <!-- Message -->
      {% for flash_message in app.session.flashBag.get('notice') %}
        {% if flash_message %}
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
            <div class="alert alert-info media fade in">
              <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
              <div class="media-left">
                <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                  <i class="fa fa-check fa-lg"></i>
                </span>
              </div>
              <div class="media-body">
                <p></p>
                  <h4 class="alert-title" style="color: green">
                    {{ flash_message }}
                  </h4>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
      {% endfor %}
      <!-- \Message -->
      <br>

  <div class="row">
    <div class="col-sm-12 col-sm-offset-0">
      <div class="panel">
        <div class="btn-toolbar pad-all">
          <div class="btn-group">
            <a href="{{ path('admin_galerie_new') }}">
            <button class="btn btn-sm btn-default" type="button">
              <i class="fa fa-plus"></i> Ajouter une nouvelle galerie
            </button>
            </a>
          </div>
        </div>
        <div class="panel-heading">
          <h3 class="panel-title"></h3>
        </div>
        <div class="panel-body">
            {% for galerie in galeries %}
            <div class="row" style="margin-bottom: 20px; padding-bottom: 25px; border-bottom: solid 1px #ccc;">
              <div class="col-md-3">
                <div class="view-mail text-justify">
                  <a href="{{ path('admin_galerie_show', {'slug': galerie.slug})}}">
                    <img src="{{ asset('uploads/galeries/'~ galerie.imageName) | imagine_filter('bo_galerie') }}" class="img-thumbnail img-page">
                  </a>
                </div>
              </div>
              <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">{{ galerie.titre }} </div>
                    <div class="col-md-12">{{ galerie.description }}</div>
                </div>

              </div>
            </div>
            {% else %}
                <div class="row">
                  <div class="col-md-12 text-center">
                    <h3><em>Aucune galerie enregistrée</em></h3>
                  </div>
                </div>
            {% endfor %}
        </div>
      </div>
    </div>

  </div>

</div>
{% endblock %}
