{% extends 'base.html.twig' %}

{% block body %}
    <h1>Chef</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chef.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ chef.libelle }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ chef.couleur }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if chef.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ chef.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ chef.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ chef.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ chef.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ chef.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_chef_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_chef_edit', { 'id': chef.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
