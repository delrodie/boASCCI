{% extends 'base.html.twig' %}

{% block body %}
    <h1>Video</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ video.lien }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if video.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ video.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ video.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ video.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ video.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ video.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_video_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_video_edit', { 'id': video.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
