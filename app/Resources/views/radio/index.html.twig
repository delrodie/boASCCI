{% extends 'backoffice.html.twig' %}

{% block title %}Les emissions radios de l'ASCCI{% endblock %}

{% block body %}
    <div class="pageheader">
        <h3><i class="fa fa-home"></i>  Gestion des emissions radios</h3>
        <div class="breadcrumb-wrapper">
            <span class="label"></span>
            <ol class="breadcrumb">
                <li><a href="#">Accueil</a></li>
                <li class="active">emissions radios</li>
            </ol>
        </div>
    </div>

    <div id="page-content">

        <br>
        <!-- Message -->
        {% for flash_message in app.session.flashBag.get('notice') %}
            {% if flash_message %}
                <div class="row">
                    <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
                        <div class="alert alert-info media fade in">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            <div class="media-left">
                <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                  <i class="fa fa-check fa-lg"></i>
                </span>
                            </div>
                            <div class="media-body">
                                <p></p>
                                <h4 class="alert-title" style="color: green">
                                    {{ flash_message }}
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        <!-- \Message -->
        <br>

        <div class="row">
            <div class="col-sm-12 col-sm-offset-0">
                <div class="panel">
                    <div class="btn-toolbar pad-all">
                        <div class="btn-group">
                            <a href="{{ path('admin_radio_new') }}">
                                <button class="btn btn-sm btn-default" type="button">
                                    <i class="fa fa-plus"></i> Ajouter une nouvelle emission radio
                                </button>
                            </a>
                        </div>
                    </div>
                    <div class="panel-heading">
                        <h3 class="panel-title"></h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            {% for radio in radios %}
                                <div class="col-md-4">
                                    <div class="view-mail text-justify">
                                        <!--<iframe width="" height="" src="https://www.youtube.com/embed/{{ radio.lien }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>-->
                                        <a href="{{ radio.lien }}" target="_blank">
                                            <img src="{{ vich_uploader_asset(radio, 'imageFile') }}" class="img-thumbnail img-page" />
                                        </a>
                                        <div class="text-justify">
                                            <a href="{{ path('admin_radio_edit', {'slug': radio.slug})}}">
                                                Publiée le {{ radio.publieLe|date('d-m-Y') }} <br>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
{% endblock %}
